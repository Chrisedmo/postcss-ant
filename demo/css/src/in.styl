          display: none
      &.actor
        &:nth-child(1)
          margin-right: 'ant(%s, negative-margin, offset)[%s]' % ($sizes 2)
        &:nth-child(6)
          margin-left: 'ant(%s, negative-margin, offset)[%s]' % ($sizes 5)

  .negative-margin-move
