// Common
clearfix()
  &::after
    content: ''
    display: table
    clear: both

*
  margin: 0
  box-sizing: border-box

html
  font-family: sans-serif
  font-size: 10px
  padding: 30px

h1
  font-size: 18px
  text-align: center
  margin: 30px auto 45px
  text-transform: uppercase
  font-family: monospace, monospace

h2
  font-size: 12px
  text-transform: uppercase
  letter-spacing: .05em
  margin-bottom: 15px
  padding-top: 25px
  text-align: center
  color: rgba(dodgerblue, 50%)

h3
  font-size: 10px
  margin-bottom: 5px
  color: darken(white, 20%)

section
  > div
    clearfix()
    margin-bottom: 15px
    text-align: center
    line-height: 50px
    color: rgba(dodgerblue, 50%)
    background: rgba(dodgerblue, 10%)

    figure
      overflow: hidden
      float: left
      height: 50px
      &:nth-child(odd)
        background: rgba(dodgerblue, 15%)
      &:nth-child(even)
        background: rgba(dodgerblue, 30%)

  [class^="nth"]
    &:not([class*="gutless"])
      figure
        margin-right: 30px

        &:last-child
          margin-right: 0

  [class^="negative-margin"]
    &:not([class*="negative-margin-gutless"])
      margin-left: -15px
      margin-right: -15px

      figure
        margin: 0 15px

  &:first-of-type
    h2
      padding-top: 0
      border-top: 0

  .actor
    border: 3px solid rgba(dodgerblue, 20%)
    line-height: calc(50px - 6px)

// fraction(s) only
.fractions-only
  $sizes = unquote('1/12 2/12 3/12 3/12 2/12 1/12')

  .nth
    figure
      for $i in 1..6
        &:nth-child({$i})
          width: 'ant(%s)[%s]' % ($sizes $i)

  .nth-offset
    figure
      for $i in 1..6
        &:nth-child({$i})
          width: 'ant(%s)[%s]' % ($sizes $i)
        &:nth-child(2),
        &:nth-child(5)
          display: none
      &.actor
        &:nth-child(1)
          margin-right: 'ant(%s, offset-big)[%s]' % ($sizes 2)
        &:nth-child(6)
          margin-left: 'ant(%s, offset-small)[%s]' % ($sizes 5)

  .nth-move
    figure
      for $i in 1..6
        &:nth-child({$i})
          width: 'ant(%s)[%s]' % ($sizes $i)
      &.actor
        position: relative;
        &:nth-child(1)
          left: 'ant(%s, move)[%s]' % ($sizes 2)
        &:nth-child(2)
          right: 'ant(%s, move)[%s]' % ($sizes 1)
        &:nth-child(6)
          right: 'ant(%s, move)[%s]' % ($sizes 5)
        &:nth-child(5)
          left: 'ant(%s, move)[%s]' % ($sizes 6)

  .negative-margin
