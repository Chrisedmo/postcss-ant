          right: 'ant(%s, negative-margin, move)[%s]' % ($sizes 5)
        &:nth-child(5)
          left: 'ant(%s, negative-margin, move)[%s]' % ($sizes 6)

  .nth-gutless
    figure
      for $i in 1..6
        &:nth-child({$i})
          width: 'ant(%s, 0)[%s]' % ($sizes $i)

  .nth-gutless-offset
    figure
      for $i in 1..6
        &:nth-child({$i})
          width: 'ant(%s, 0)[%s]' % ($sizes $i)
        &:nth-child(2),
        &:nth-child(5)
          display: none
      &.actor
        &:nth-child(1)
          margin-right: 'ant(%s, 0, offset-big)[%s]' % ($sizes 2)
        &:nth-child(6)
          margin-left: 'ant(%s, 0, offset-small)[%s]' % ($sizes 5)

  .nth-gutless-move
