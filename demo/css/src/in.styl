// Common
clearfix()
  &::after
    content: ''
    display: table
    clear: both

*
  margin: 0
  box-sizing: border-box

html
  font-family: sans-serif
  font-size: 10px
  padding: 30px

h1
  font-size: 18px
  text-align: center
  margin: 30px auto 45px
  text-transform: uppercase
  font-family: monospace, monospace

h2
  font-size: 12px
  text-transform: uppercase
  letter-spacing: .05em
  margin-bottom: 15px
  padding-top: 25px
  text-align: center
  color: darken(white, 15%)

section
  .overflow-clipper
    overflow: hidden

  .nth,
  .negative-margin,
  .gutterless
    clearfix()
    text-align: center
    line-height: 50px
    color: rgba(dodgerblue, 50%)
    background: rgba(dodgerblue, 10%)

    > figure
      overflow: hidden
      float: left
      height: 50px
      &:nth-child(odd)
        background: rgba(dodgerblue, 15%)
      &:nth-child(even)
        background: rgba(dodgerblue, 30%)

  .nth
    figure
      margin-right: 30px

      &:last-child
        margin-right: 0

  .negative-margin
    margin: 0 -15px

    > figure
      margin: 0 15px

  > *
    margin-bottom: 15px

  &:first-of-type
    h2
      padding-top: 0
      border-top: 0

// fraction(s) only
.fractions-only
  .nth
    figure
      for $i in 1..3
        &:nth-child({$i})
          width: 'ant(1/6 2/6 3/6)[%s]' % $i

  .negative-margin
    > figure
      for $i in 1..3
        &:nth-child({$i})
          width: 'ant(1/6 2/6 3/6, negative-margin)[%s]' % $i

  .gutterless
    figure
      for $i in 1..3
        &:nth-child({$i})
          width: 'ant(1/6 2/6 3/6, 0)[%s]' % $i

// fraction(s) and fixed number(s) only
.fractions-and-fixed-numbers-only
  .nth
    figure
      for $i in 1..4
        &:nth-child({$i})
          width: 'ant(1/2 1/2 600px 200px)[%s]' % $i

  .overflow-clipper
    .negative-margin
      > figure
        for $i in 1..4
          &:nth-child({$i})
            width: 'ant(1/2 1/2 600px 200px, negative-margin)[%s]' % $i

  .gutterless
    figure
