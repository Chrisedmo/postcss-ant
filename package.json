{
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports",
      "transform-flow-strip-types"
    ]
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "main": "./ant.js",
  "scripts": {
    "start": "npm-run-all -p babel chokidar:sass chokidar:postcss browser-sync",
    "babel": "babel -w lib -d build",
    "chokidar:sass": "chokidar -p test/visual/**/in.scss -c \"node-sass --output-style expanded {path} (echo {path} | cut -d '/' -f -4)/out.css\"",
    "chokidar:postcss": "chokidar -p test/visual/**/out.css -c \"postcss --local-plugins -u ./build/index.js -o (echo {path} | cut -d '/' -f -4)/final.css {path}\"",
    "browser-sync": "browser-sync start --directory -s --no-open --no-notify --files'test/visual/index.html, test/visual/**/out.css' --startPath='test/visual'",
    "test": "ava --verbose"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "postcss": "^5.2.0",
    "postcss-value-parser": "^3.3.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.16.0",
    "chokidar-cli": "^1.2.0",
    "codecov": "^1.0.1",
    "cssnano": "^3.7.5",
    "cssnano-cli": "^1.0.5",
    "eslint": "^3.6.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "flow-bin": "^0.32.0",
    "node-sass": "^3.10.0",
    "npm-run-all": "^3.1.0",
    "nyc": "^8.3.0",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.35.11",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-flow": "^1.0.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-uglify": "^1.0.1",
    "standard": "^8.1.0"
  }
}
