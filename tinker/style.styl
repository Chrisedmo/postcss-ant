@import 'common.css'

$sizes = '1/4 1/2 1/4'
$length = length(split(' ', $sizes))

$gutter = 45px


section
  display: flex
  flex-wrap: wrap

div
  margin: 0 $gutter $gutter 0

  for $i in 1..$length
    &:nth-child(3n + {$i})
      width: sizes($sizes) get($i) gutter($gutter)

  &:nth-child(3n)
    margin-right: 0

header
  display: flex

figure
  width: sizes(1/3) get(1)
  margin: 0 30px 30px 0

  &:last-child
    margin-right: 0
